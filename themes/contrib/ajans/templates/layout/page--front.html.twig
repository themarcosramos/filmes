<div class="uk-section uk-section-default uk-section-xsmall shadow" uk-sticky="show-on-up: true">
	<div class="uk-container">
		<nav class="uk-navbar-container uk-navbar-transparent" uk-navbar="dropbar: true; dropbar-mode: push; mode: click; boundary-align: true; align: center">

			{% if page.navbar_left %}
				<div class="uk-navbar-left">
					{{ page.navbar_left }}
				</div>
			{% endif %}

			{% if page.navbar_center %}
				<div class="uk-navbar-center">
					{{ page.navbar_center }}
				</div>
			{% endif %}

			<div class="uk-navbar-right uk-visible@m">
				{% if page.navbar_right %}
					{{ page.navbar_right }}
				{% else %}
					<div class="uk-flex uk-flex-middle uk-visible@m">
						<a class="uk-icon-link uk-margin-right" uk-icon="forward"></a>
						<a class="uk-icon-link uk-margin-right" uk-icon="cog"></a>
						<a class="uk-icon-link uk-margin-right" uk-icon="user"></a>
					</div>
				{% endif %}
			</div>
		</nav>
		<div class="uk-navbar-dropbar"></div>
	</div>
</div>

	{% if is_front and show_slideshow %}
<div class="uk-section uk-background-cover" >
  <div id="slideshow" class="uk-position-relative uk-visible-toggle" tabindex="-1" uk-slideshow="{{ slideshow_ratio }}">
    <ul class="uk-slideshow-items">
      {% for slider_contents in slide %}
      <li>
      {% if slider_contents.image %}<img src="{{slider_contents.image}}" alt="Image">{% endif %}
      {% if slider_contents.slide_desc  or slider_contents.slide_head %}
        <div class="banner-content uk-text-left uk-position-center">
        <h1 class="banner-heading uk-h1 uk-text-secondary uk-text-light uk-heading-divider">{{slider_contents.slide_head}}</h1>
        <p class="banner-body uk-text-muted uk-width-3-4 uk-margin-medium">{{slider_contents.slide_desc}}</p>
        <a class="btn-main" href="{{slider_contents.slide_url}}">{{slider_contents.slide_url_text}}</a>
        </div>
      {% endif %}
      </li>
      {% endfor %}
    </ul>
    <a class="uk-position-center-left uk-position-large uk-text-primary" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
    <a class="uk-position-center-right uk-position-large uk-text-primary" href="#" uk-slidenav-next uk-slideshow-item="next"></a>
  </div>
</div>
	{% endif %}

{% if page.content_top %}
			{{ page.content_top }}
{% endif %}

{% if page.content_bottom %}
			{{ page.content_bottom }}
{% endif %}


	{% if page.footer %}
		<div id="footer" class="uk-section uk-section-secondary uk-section-small">
			<div class="uk-container">
				<div class="uk-child-width-expand" uk-grid>
					{% if show_about_block %}
						<div class="uk-width-1-4">
							<div class="uk-panel block">
								<div class="uk-flex-middle">
									<span class="uk-margin-small-right uk-icon" uk-icon="icon: nut; ratio: 2"></span>
									<span class="first-word uk-h4 uk-text-light">{{ site_name }}</span>
								</div>
								<p class="uk-margin">
									{{- about_us|render|striptags[:150] ~ '...' -}}
								</p>
								<ul class="uk-child-width-auto uk-grid" uk-grid="">
									<li class="uk-first-column">
										<a class="uk-icon-button uk-icon" target="_blank" href="{{ facebook_url}}" uk-icon="facebook">
										</svg></a>
									</li>
									<li>
										<a class="uk-icon-button uk-icon" target="_blank" href="{{ linkedin_url}}" uk-icon="linkedin"></a>
									</li>

									<li>
										<a class="uk-icon-button uk-icon" target="_blank" href="{{ whatsup_url }}" uk-icon="whatsapp"></a>
									</li>
									<li>
										<a class="uk-icon-button uk-icon" target="_blank" href="{{ youtube_url }}" uk-icon="youtube"></a>
									</li>
								</ul>
							</div>
						</div>
					{% endif %}
					{{ page.footer }}
					{% if show_contact_block %}
						<div class="uk-width-1-4">
							<div class="uk-panel block">
								<h3 class="uk-h4 uk-text-light uk-margin-bottom">{{ contact_title }}</h3>

								<ul class="uk-list">
									<li><span class="uk-margin-small-right uk-icon" uk-icon="receiver"></span>{{ phone }}</li>
									<li><span class="uk-margin-small-right uk-icon" uk-icon="mail"></span>{{ email }}</li>
								</ul>
							</div>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	{% endif %}

{% if page.footer_bottom %}
	<div class="uk-section uk-section-primary uk-section-small">
		<div class="uk-container">
			{{ page.footer_bottom }}
		</div>
	</div>
{% endif %}